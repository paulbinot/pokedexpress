<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs") %>

<main class="page-container">
    <div class="pokemon-grid">

        <% for( let pokemon of pokedex ) { %>
            <div class="pokemon-grid-item">
                <div class="pokemon-grid-item__infos">
                    <h2>
                        <span>#<%= pokemon.id %> </span>
                        <span><%= pokemon.name.english %> </span>
                    </h2>
                </div>
                <img src="/images/pokemons/thumbnails/<%= pokemon.id %>.png" alt="<%= pokemon.name.english %> image">
                <!-- <a href="/pokemons/<%= pokemon.id %>"><button>view more</button> </a> -->
                <a href="/pokemons/<%= pokemon.id %>">view more +</a>
            </div>
        <% } %>

    </div>
</main>




